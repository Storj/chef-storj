[Unit]
Description=Storj Share Service
[Service]
User=<%= @user %>
Group=<%= @user %>
Restart=always
KillMode=control-group
Environment=APPDIR=<%= @app_dir %>
Environment=NODE_ENV=<%= @node_env %>
Environment=HOME=<%= @home %>
Environment=STORJ_NETWORK=<%= @storj_network %>
Environment=STORJ_BRIDGE=<%= @storj_bridge %>
Environment=STORJSHARE_PASSPHRASE=<%= @share_pw %>
ExecStart=/bin/bash -c 'source <%= @home %>/.nvm/nvm.sh && cd $APPDIR && exec node <%= @node_index %> start >> <%= @log_path %> 2>&1'
