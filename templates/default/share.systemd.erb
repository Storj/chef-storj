[Unit]
Description=Storj Share Service
[Service]
User=<%= @user %>
Group=<%= @user %>
Restart=always
KillMode=control-group
Environment=HOME=<%= @home %>
Environment=STORJ_NETWORK=<%= @storj_network %>
Environment=NODE_ENV=<%= @node_env %>
ExecStart=/bin/bash -c "source <%= @home %>/.nvm/nvm.sh && cd <%= @app_dir %> && exec bin/storjshare.js start -c <%= @config_path %> --detached >> <%= @log_path %>"
