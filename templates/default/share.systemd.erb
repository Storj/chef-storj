[Unit]
Description=Storj Share Service
[Service]
User=<%= @user %>
Group=<%= @user %>
Restart=always
KillMode=control-group
Environment=APPDIR=<%= @app_dir %>
Environment=NODE_ENV=<%= @node_env %>
Environment=HOME=<%= @home %>
Environment=STORJ_NETWORK=<%= @storj_network %>
ExecStart=/bin/bash -c 'source <%= @home %>/.nvm/nvm.sh && cd $APPDIR && exec bin/storjshare.js start -c <%= @config_path %>'
