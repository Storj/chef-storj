sharding:
  configDB: <%= @configDB %>
net:
  port: <%= @listenPort %>
  ssl:
    mode: requireSSL
    allowConnectionsWithoutCertificates: true
    allowInvalidCertificates: true
    PEMKeyFile: <%= @key_file %>
  <% if @enable_ca %>
    CAFile: <%= @ca_file %>
  <% end %>
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongos.log

<% if @security_enabled %>
security:
<% end %>
<% if @security_keyfile %>
  keyFile: <%= @security_keyfile %>
<% end %>

