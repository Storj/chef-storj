start on runlevel [2345]
stop on runlevel [06]

setuid <%= @user %> #don't run the process as root. You are asking for trouble if you do
setgid <%= @group %>

env APPDIR=<%= @app_dir %>
env NODE_ENV=<%= @node_env %>
env HOME=<%= @home %>
<% if @storj_network %>
env STORJ_NETWORK=<%= @storj_network %>
<% end %>

script
    chdir $APPDIR
    exec bash -c 'source <%= @home %>/.nvm/nvm.sh && exec bin/storjshare.js start -c <%= @config_path %>'
end script

start on startup
respawn
